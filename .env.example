# Hugo CMS Configuration
# Copy this file to .env and configure your settings

# Git Repository URL (required)
HUGO_GIT_REPO_URL=https://github.com/yourusername/your-hugo-site.git

# Git Branch (optional, defaults to 'main')
HUGO_GIT_BRANCH=main

# Git Access Token (required for private repos or push access)
# For GitHub: Generate at https://github.com/settings/tokens
HUGO_GIT_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Working Directory (optional, defaults to /tmp/hugo-cms-work)
HUGO_WORKING_DIR=/tmp/hugo-cms-work
